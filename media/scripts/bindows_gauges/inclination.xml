<Gauge2 coordWidth="1000" coordHeight="1000" left="0" top="0" bottom="0" right="0">
    <!-- Background -->
    <Gauge2CircularBorder/>

    <!-- Labels -->
    <!-- Label -->
    <Gauge2Label  text="" font="70 Verdana" foreColor="#000000" x="500" y="300" anchorHorizontal="center" anchorVertical="center"/>
    <!-- Label -->
    <Gauge2Label  text="Inclination" font="70 Verdana" foreColor="#000000" x="500" y="500" anchorHorizontal="center" anchorVertical="center"/>

    <!-- Range -->
    <Gauge2RadialRange centerX="500" centerY="500" width="1000" height="1000" startAngle="0" endAngle="180">
        <!-- Scale -->
        <Gauge2RadialScale radius="430" startValue="0" endValue="100">
            <Gauge2RadialScaleSection sectionWidth="110" color="gray" radius="320" startValue="0" endValue="100"/>
            <Gauge2RadialScaleSection sectionWidth="106" color="#DDDDDD" radius="320" startValue="0" endValue="100"/>

            <Gauge2RadialScaleSection sectionWidth="25" color="gray" radius="380" startValue="0" endValue="100"/>
            <Gauge2RadialScaleSection sectionWidth="21" color="white" radius="380" startValue="0" endValue="100"/>
        </Gauge2RadialScale>

        <!-- Ticks -->
        <Gauge2RadialTicks tickWidth="1" tickLength="23" color="gray" tickCount="33" radius="380"/>
        <Gauge2RadialTicks tickWidth="6" tickLength="23" color="black" tickCount="9" radius="380"/>
    </Gauge2RadialRange>

    <!-- Range -->
    <Gauge2RadialRange centerX="500" centerY="500" width="1000" height="1000" startAngle="180" endAngle="0">
        <Gauge2RadialScale font="45 Verdana" foreColor="#000000" radius="440" startValue="0" endValue="180" labelCount="5"/>
    </Gauge2RadialRange>

    <!-- Range -->
    <Gauge2RadialRange centerX="500" centerY="500" width="1000" height="1000" startAngle="-180" endAngle="180">
        <Gauge2RadialScale radius="440" startValue="-180" endValue="180" >
            <!-- Needle -->
            <Gauge2RadialNeedle id="needle" value="0" stroke="#000000" strokeWidth="1"
                                innerRadius="240" innerWidth="100"
                                outerRadius="340" outerWidth="5">
                <Gauge2RadialNeedle.Filler>
                    <Gauge2RadialGradientFiller color1="#EEFFEE" color2="#22FF22"/>
                </Gauge2RadialNeedle.Filler>
            </Gauge2RadialNeedle>            
        </Gauge2RadialScale>
    </Gauge2RadialRange>
</Gauge2>